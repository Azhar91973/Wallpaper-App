<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/primary_color" />
            <size
                android:width="1dp"
                android:height="1dp" />
            <stroke
                android:width="1dp"
                android:color="@color/white" />
        </shape>
    </item>
    <item
        android:bottom="2dp"
        android:drawable="@drawable/ic_moon"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp"/>
</layer-list>
