<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Base.Theme.DynamicWallpaper" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Set the default window background color -->
        <item name="android:windowBackground">@color/white</item>

        <!-- Transparent system bars for edge-to-edge UI -->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>

        <!-- Adjust the light/dark content of the status bar based on the theme -->
        <item name="android:windowLightStatusBar">?attr/isLightTheme</item>

        <!-- Optional: Navigation bar light icons based on the theme -->
        <item name="android:windowLightNavigationBar">?attr/isLightTheme</item>

        <!-- Set the color for navigation bar divider if needed -->
        <item name="android:navigationBarDividerColor">@android:color/transparent</item>
    </style>
</resources>