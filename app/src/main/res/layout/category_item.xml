<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_category"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_marginEnd="10dp"
        android:scaleType="centerCrop"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearance="@style/CornerCut" />

    <TextView
        android:id="@+id/tv_category"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/item_category_bg"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/img_category"
        app:layout_constraintEnd_toEndOf="@+id/img_category"
        app:layout_constraintStart_toStartOf="@+id/img_category"
        app:layout_constraintTop_toTopOf="@+id/img_category" />
</androidx.constraintlayout.widget.ConstraintLayout>